<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.therecipehost.Fragments.ChooseMealFragment">

    <TextView
        android:id="@+id/find_recipe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingTop="20dp"
        android:text="@string/find_your_recipe"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_recipe_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bottom_line_ui"
        android:drawableEnd="@drawable/search_icon"
        android:hint="@string/search_recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_recipe_tv" />

    <ProgressBar
        android:id="@+id/loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:indeterminateDrawable="@drawable/progressbar_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/featured_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/might_interest_you"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_recipe_et" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_meal_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featured_tv" />

    <ImageView
        android:id="@+id/choose_meal_empty_state_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:src="@drawable/no_results"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_recipe_et" />

    <TextView
        android:id="@+id/choose_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/what_do_you_like"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_meal_rv" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/choose_meal_orange"
        android:textAllCaps="false"
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@+id/choose_category_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/category_chicken"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Chicken" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/choose_meal_white"
        android:textAllCaps="false"
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@+id/choose_category_tv"
        app:layout_constraintStart_toEndOf="@+id/category_chicken"
        android:id="@+id/category_meat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Meat" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/choose_meal_green"
        app:layout_constraintTop_toBottomOf="@+id/choose_category_tv"
        app:layout_constraintStart_toEndOf="@+id/category_meat"
        android:textAllCaps="false"
        android:layout_margin="6dp"
        android:id="@+id/category_fish"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Fish" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/choose_meal_orange"
        app:layout_constraintTop_toBottomOf="@+id/choose_category_tv"
        app:layout_constraintStart_toEndOf="@+id/category_fish"
        android:textAllCaps="false"
        android:layout_margin="6dp"
        android:id="@+id/category_deserts"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Deserts" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/choose_meal_white"
        app:layout_constraintTop_toBottomOf="@+id/category_meat"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:layout_marginTop="6dp"
        android:layout_marginStart="50dp"
        android:id="@+id/category_dairy"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Dairy" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/choose_meal_green"
        app:layout_constraintTop_toBottomOf="@+id/category_meat"
        app:layout_constraintStart_toEndOf="@+id/category_dairy"
        android:textAllCaps="false"
        android:layout_margin="6dp"
        android:id="@+id/category_pasta"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Pasta" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/choose_meal_orange"
        app:layout_constraintTop_toBottomOf="@+id/category_meat"
        app:layout_constraintStart_toEndOf="@+id/category_pasta"
        android:textAllCaps="false"
        android:layout_margin="6dp"
        android:id="@+id/category_bakery_goods"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Bakery Goods" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/choose_meal_white"
        app:layout_constraintTop_toBottomOf="@+id/category_pasta"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:layout_marginTop="6dp"
        android:layout_marginStart="30dp"
        android:id="@+id/category_soups"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Soups" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/choose_meal_green"
        app:layout_constraintTop_toBottomOf="@+id/category_bakery_goods"
        app:layout_constraintStart_toEndOf="@+id/category_soups"
        android:textAllCaps="false"
        android:layout_margin="6dp"
        android:id="@+id/category_salads"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Salads" />
</androidx.constraintlayout.widget.ConstraintLayout>